<!-- app/views/devise/registrations/new.html.erb -->
<h2>Registrarse</h2>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Mostrar mensajes de error -->
      <%= devise_error_messages! %>

      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false } do |form| %>
        <div class="mb-3">
          <%= form.label :email, class: "form-label" %>
          <%= form.email_field :email, class: "form-control", autofocus: true %>
        </div>

        <div class="mb-3">
          <%= form.label :password, class: "form-label" %>
          <%= form.password_field :password, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :password_confirmation, class: "form-label" %>
          <%= form.password_field :password_confirmation, class: "form-control" %>
        </div>

        <%= form.submit "Registrarse", class: "btn btn-success" %>
      <% end %>

      <hr>
      <%= link_to "Iniciar SesiÃ³n", new_session_path(resource_name), class: "btn btn-link" %>
    </div>
  </div>
</div>
