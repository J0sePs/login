
<!-- app/views/devise/sessions/new.html.erb -->
<h2>Iniciar Sesión</h2>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true do |form| %>
        <div class="mb-3">
          <%= form.label :email, class: "form-label" %>
          <%= form.email_field :email, class: "form-control", autofocus: true %>
        </div>

        <div class="mb-3">
          <%= form.label :password, class: "form-label" %>
          <%= form.password_field :password, class: "form-control" %>
        </div>

        <div class="mb-3 form-check">
          <%= form.check_box :remember_me, class: "form-check-input" %>
          <%= form.label :remember_me, class: "form-check-label" %>
        </div>

        <%= form.submit "Iniciar Sesión", class: "btn btn-primary" %>
      <% end %>

      <hr>
      <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: "btn btn-link" %>
      <%= link_to "Registrarse", new_registration_path(resource_name), class: "btn btn-link" %>
    </div>
  </div>
</div>
